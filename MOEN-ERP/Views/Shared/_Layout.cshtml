    <!--begin::เงื่อนไขการแสดงผล-->

    <div class="modal fade" id="mdlScreen" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="DisplayScreen" asp-controller="VehicleDisplay">

                    <div class="modal-header">
                        <h5 class="modal-title">เงื่อนไขการแสดงผล</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row fv-row mb-3">
                            <label class="col-form-label col-lg-4 text-lg-end">สถานะการใช้งาน : </label>
                            <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                <div class="d-xxl-flex d-xl-flex d-lg-flex d-md-flex d-sm-flex mt-2">
                                    <div class="form-check  form-check-custom form-check-solid  me-xxl-10 me-xl-10 me-lg-10 me-md-10 me-sm-10 mb-2">
                                        <input class="form-check-input" type="radio" id="rdoColor" value="color" name="type" onchange="setDisplayScreen(this.value)" checked>
                                        <label class="form-check-label" for="rdoColor">
                                            เปลี่ยนสี
                                        </label>
                                    </div>

                                    <div class="form-check form-check-custom form-check-solid me-xxl-10 me-xl-10 me-lg-10 me-md-10 me-sm-10 mb-2">
                                        <input class="form-check-input" type="radio" id="rdoHide" value="hide" name="type" onchange="setDisplayScreen(this.value)">
                                        <label class="form-check-label" for="rdoHide">
                                            หายไป
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row fv-row mb-3 d-none" id="divHourDisplayScreen">
                            <label class="col-form-label col-lg-4 text-lg-end">จำนวนชั่วโมง</label>
                            <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                <input class="form-control form-control-sm" name="hour" type="number" value="1" autocomplete="off" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-sm btn-primary">ยืนยัน</button>
                        <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">ยกเลิก</button>
                    </div>
                </form>
                <script>
                    function setDisplayScreen(value) {
                        if (value == 'color') {
                            $('#divHourDisplayScreen').addClass('d-none')
                        } else {
                            $('#divHourDisplayScreen').removeClass('d-none')

                        }
                    }
                </script>
            </div>
        </div>
    </div>
