    <div class="card-header">

        <div class="card-title align-items-start flex-column" style="width:70%">
            <div class="row col-lg-12 col-md-12">
                <div id="divPagination" class="col-lg-2 col-md-2 col-sm-4">
                    <button type="button" onclick="SearchQueue('PreviousPage')" class="btn btn-sm btn btn-icon btn-secondary m-1"><i class="fa fa-angle-left"></i></button>
                    <button type="button" onclick="SearchQueue('NextPage')" class="btn btn-sm btn btn-icon btn-secondary m-1"><i class="fa fa-angle-right"></i></button>
                </div>
                <div class="col-lg-10 col-md-10 col-sm-4">
                    <h2 class="m-2">คิวประจำวันที่ @(string.Format("{0:dd MMMM yyyy}", Model.CurrentQueueDate))</h2>
                </div>

            </div>
        </div>
