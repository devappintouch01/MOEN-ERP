    </div>
</div>

<div class="separator separator-dashed mt-5 mb-5"></div>

<div class="table-responsive-xxl table-responsive-xl table-responsive-lg table-responsive-md table-responsive-sm">
    <table class="table table-row-dashed table-hover table-row-gray-300 align-middle gy-5 gs-7 js-table">
        <thead class="table-primary">
            <tr class="fw-semibold fs-6 text-gray-80 fw-bold">
                <th class="text-center" style="width:5%">ลำดับ</th>
                <th class="text-center">ทะเบียน</th>
                <th class="text-center">ผู้ขับ</th>
                <th class="text-center">เวลาออก</th>
                <th class="text-center">จุดหมายการเดินทาง</th>
                <th class="text-center">เวลากลับ</th>
                <th class="text-center">สำนัก/กอง</th>
                <th class="text-center">ผู้ขอ</th>
            </tr>
        </thead>
        <tbody>
            @{
                int rown = 1;
            }
            @foreach (var row in Model.VehicleQueueList)
            {
                
                <tr>
                    <td class="text-center">@rown</td>
                    <td class="text-center">@row.VehicleRegistration</td>
                    <td class="text-center">@row.DriverName</td>
                    <td class="text-center">@row.GoTime</td>
                    <td class="text-center">@row.TravelToLocation</td>
                    <td class="text-center">@row.BackTime</td>
                    <td class="text-center">@row.OrganizationName</td>
                    <td class="text-center">@row.BookerName</td>
                </tr>
                rown++;
            }

        </tbody>
    </table>
</div>



