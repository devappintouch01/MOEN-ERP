@model MOEN_ERP.Models.ViewModel.VehicleDriverDetail

<link rel="stylesheet" href="~/assets/css/style.bundle.css" />

<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" id="modalViewVehicleDetail">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
        <div class="modal-content">
            <div class="modal-header">

                <h3 class="modal-title">รายละเอียดพนักงานขับรถ</h3>

                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
                <!--end::Close-->
            </div>

            <div class="modal-body">

                <div class="row mb-3">
                    <div class="col-md-6 offset-md-3 mb-1">


                        <div class="card h-auto p-1">
                            <div class="card-body p-5 bg-white">
                                <div class="card-image-container">
                                    <div class="card-image-in-container card-image-center ">
                                        @if (Model?.AttachFile != null)
                                        {
                                            <img src="@Url.Action("ViewAttachFileImage", "AttachFile", new { @Id = Model?.AttachFile?.RowGuid })" alt="@Model?.AttachFile?.Filename" class="card-image-fit" />
                                        }else
                                        {
                                            <img src="~/assets/media/avatars/blank.png" class="card-image-fit" />
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>


                <div class="separator separator-dashed mt-5 mb-5"></div>

                <div class="row mb-3">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-6 form-control-label text-lg-end">
                                <label class="fw-bold">ชื่อ-นามสกุล : </label>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-6">
                                <label class="form-control-label">@Model?.VOfficer?.FullName</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-6 form-control-label text-lg-end">
                                <label class="fw-bold">เบอร์โทรศัพท์ : </label>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-6">
                                <label class="form-control-label">@Model?.VOfficer?.Phone</label>
                            </div>
                        </div>
                    </div>
                </div>


            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">ปิด</button>
            </div>
        </div>
    </div>
</div>


<script src="~/assets/js/scripts.bundle.js"></script>
<script>

</script>