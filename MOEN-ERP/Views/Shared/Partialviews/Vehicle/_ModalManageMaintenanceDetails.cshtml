@model MOEN_ERP.Models.MockupViewModel
@{
    var actionType = Model.ActionType;
}

<link rel="stylesheet" type="text/css" href="~/assets/plugins/global/plugins.bundle.css" />
<link rel="stylesheet" href="~/assets/css/style.bundle.css" />
<link rel="stylesheet" href="~/assets/plugins/custom/fullcalendar/fullcalendar.bundle.css" />

<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" id="modalManageVDOConferences">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">

                @if (actionType == "new")
                {
                    <h3 class="modal-title"><span class="btn btn-icon bg-success"><i class="fa fa-plus"></i></span> รายละเอียดการซ่อมบำรุงรักษา</h3>
                }
                else
                {
                    <h3 class="modal-title"><span class="btn btn-icon bg-warning"><i class="fa fa-edit"></i></span> รายละเอียดการซ่อมบำรุงรักษา</h3>
                }
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
                <!--end::Close-->
            </div>

            <div class="modal-body">

                <div class="row mb-3">
                    <label class="col-form-label col-xxl-3 col-xl-3 col-lg-3 col-md-3 col-sm-12 text-lg-end">เลขระยะทางที่เข้าซ่อม<span class="required"></span> : </label>
                    <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-12">
                        <input class="form-control form-control-sm" placeholder="กรุณาระบุ" />
                    </div>
                    <label class="col-form-label col-xxl-2 col-xl-2 col-lg-2 col-md-2 col-sm-12 text-lg-end">กิโลเมตร</label>
                </div>

                <div class="row mb-3">
                    <label class="col-form-label col-xxl-3 col-xl-3 col-lg-3 col-md-3 col-sm-12 text-lg-end">วันที่เข้าซ่อม<span class="required"></span> : </label>
                    <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-12">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-sm datepickerinput" id="RepairDate" />
                            <span class="input-group-text" id="basic-addon2">
                                <i class="fas fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-form-label col-xxl-3 col-xl-3 col-lg-3 col-md-3 col-sm-12 text-lg-end">รายการแจ้งซ่อม<span class="required"></span> : </label>
                    <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">
                        <select class="form-select form-select-solid" data-control="select2" data-close-on-select="false" data-placeholder="กรุณาเลือก" data-allow-clear="true" multiple="multiple">
                            <option>เลือกรายการ</option>
                            <option value="1">เปลี่ยนน้ำมันเครื่อง</option>
                            <option value="2">เปลี่ยนไส้กรอง</option>
                            <option value="3">เปลี่ยนแหวนรองน้ำมันเครื่อง</option>
                            <option value="4">เปลี่ยนหัวเทียน</option>
                            <option value="5">เปลี่ยนยาง</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-form-label col-xxl-3 col-xl-3 col-lg-3 col-md-3 col-sm-12 text-lg-end">สถานที่เข้ารับบริการ<span class="required"></span> : </label>
                    <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">
                        <select class="form-select form-select-solid" data-control="select2" data-close-on-select="false" data-placeholder="กรุณาเลือก" data-allow-clear="true" multiple="multiple">
                            <option>เลือกรายการ</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-form-label col-xxl-3 col-xl-3 col-lg-3 col-md-3 col-sm-12 text-lg-end">วันที่ตรวจรับรถ : </label>
                    <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-12">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-sm datepickerinput" id="CarInspectionDate" />
                            <span class="input-group-text" id="basic-addon2">
                                <i class="fas fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-form-label col-xxl-3 col-xl-3 col-lg-3 col-md-3 col-sm-12 text-lg-end">ผู้ส่งซ่อม<span class="required"></span> : </label>
                    <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">
                        <select class="form-select form-select-solid" data-control="select2" data-placeholder="กรุณาเลือก" >
                            <option>เลือกรายการ</option>
                        </select>
                    </div>
                </div>

                 <div class="row mb-3">
                    <label class="col-form-label col-xxl-3 col-xl-3 col-lg-3 col-md-3 col-sm-12 text-lg-end">ระยะเข้าซ่อมครั้งถัดไป<span class="required"></span> : </label>
                    <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-12">
                        <input class="form-control form-control-sm" placeholder="กรุณาระบุ" />
                    </div>
                    <label class="col-form-label col-xxl-2 col-xl-2 col-lg-2 col-md-2 col-sm-12 text-lg-end">กิโลเมตร</label>
                </div>



            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">ยืนยัน</button>
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">ปิด</button>
            </div>
        </div>
    </div>
</div>


<!--begin::Global Javascript Bundle(mandatory for all pages)-->
<script src="~/assets/plugins/global/plugins.bundle.js"></script>
<script src="~/assets/js/scripts.bundle.js"></script>
<script src="~/js/moment-timezone.js"></script>
<script src="~/js/index.global.min.js"></script>


<script>
    $(function(){
        SetRealteDate('RepairDate', '');
        SetRealteDate('CarInspectionDate', '');
    });
</script>