@section Title {
    <span class="fs-1 fw-semibold">รับพัสดุ</span>

}
@section Breadcrumb {
    <li class="breadcrumb-item pe-3"><a href="#" class="pe-3">หน้าแรก</a></li>
    <li class="breadcrumb-item pe-3 text-muted">รับพัสดุ</li>
}

<div class="card mt-10">
    <div class="card-body">
        <div class="row mb-3">

            <div class="col-md-4 mb-3">
                <label class="col-form-label">เลขที่รับ</label>
                <input class="form-control form-control-sm" readonly />
            </div>
            <div class="col-md-4 mb-3">
                <label class="col-form-label">วันที่รับ <span class="text-danger">*</span></label>
                <div class="position-relative">
                    <input type="text" class="form-control form-control-sm datepickerinput" placeholder="วว/ดด/ปปปป" value="26/07/2567" />
                    <div class="position-absolute translate-middle-y top-50 end-0 me-3">
                        <i class="fas fa-calendar fs-1hx"><span class="path1"></span><span class="path2"></span></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <label class="col-form-label">สถานะ</label>
                <input class="form-control form-control-sm" readonly value="" />
            </div>
            <div class="col-md-4 mb-3">
                <label class="col-form-label">เลขที่สัญญา/ใบสั่งซื้อ</label>
                <input class="form-control form-control-sm" value="" />
            </div>
            <div class="col-md-4 mb-3">
                <label class="col-form-label">วันที่สัญญา/ใบสั่งซื้อ</label>
                <div class="position-relative">
                    <input type="text" class="form-control form-control-sm datepickerinput" placeholder="วว/ดด/ปปปป" value="26/07/2567" />
                    <div class="position-absolute translate-middle-y top-50 end-0 me-3">
                        <i class="fas fa-calendar fs-1hx"><span class="path1"></span><span class="path2"></span></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <label class="col-form-label">ชื่อผู้ขาย/ผู้รับจ้าง/ผู้จำหน่าย</label>
                <div class="input-group input-group-sm">
                    <input type="text" class="form-control form-control-sm">
                    <button class="btn btn-primary" type="button"><i class="fa fa-search"></i></button>
                </div>
            </div>


            <div class="col-lg-12 col-md-12 col-sm-12 text-end mt-5">
                <button id="btnAdd" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#mdlDetail">
                    <i class="fa fa-plus"></i> เพิ่มรายการ
                </button>
            </div>

            <div class="table-responsive-xxl table-responsive-xl table-responsive-lg table-responsive-md table-responsive-sm">
                <table id="table1" class="table table-row-dashed table-hover table-row-gray-300 align-middle gy-5 gs-7 js-table">
                    <thead class="table-primary">
                        <tr class="fw-semibold fs-6 text-gray-80 fw-bold">
                            <th class="text-center"></th>
                            <th class="text-center" style="width:5%">#</th>
                            <th class="text-center">รายการ</th>
                            <th class="text-center">หน่วยนับ</th>
                            <th class="text-center">จำนวนหน่วย</th>
                            <th class="text-center">ราคาต่อหน่วย (ก่อนVAT)</th>
                            <th class="text-center">ราคาต่อหน่วย (ร่วมVAT)</th>
                            <th class="text-center">จำนวนเงิน</th>
                            <th class="text-center">หมวดพัสดุ</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center">
                                <a href="#" class="btn btn-icon btn-sm btn-light-warning text-gray-800 text-hover-white fw-bold mb-0"
                                   data-bs-toggle="modal" data-bs-target="#mdlDetail"
                                   data-bs-toggle="tooltip" data-bs-custom-class="tooltip-inverse" title="แก้ไขรายละเอียด">
                                    <i class="fa fa-edit fs-4"></i>
                                </a>
                                <a href="#" class="btn btn-icon btn-sm btn-light-danger text-gray-800 text-hover-white fw-bold mb-0"
                                   data-bs-toggle="tooltip" data-bs-custom-class="tooltip-inverse" title="ลบ">
                                    <i class="fa fa-trash fs-4"></i>
                                </a>
                            </td>
                            <td class="text-center">1</td>
                            <td class="text-center">กระดาษถ่ายเอกสาร A3</td>
                            <td class="text-center">รีม</td>
                            <td class="text-center">5</td>
                            <td class="text-center">240.75</td>
                            <td class="text-center">250</td>
                            <td class="text-center">1,203.75</td>
                            <td class="text-center">11112</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-10">
            </div>
            <div class="col-md-2">
                <label class="col-form-label">รวมเป็นเงินทั้งสิ้น</label>
                <input class="form-control form-control-sm text-end" readonly value="1,203.75" />
            </div>
        </div>



        <div class="mt-10 row">
            <div class="col-8">
                <button class="btn btn-primary btn-sm"><i class="fa fa-save"></i> บันทึก</button>
                <a href="@Url.Action("AssetMaterialOrganizationList","Asset")" class="btn btn-secondary btn-sm"><i class="fa fa-refresh"></i> กลับหน้าหลัก</a>
            </div>
            <div class="col-4 text-end">
            </div>

        </div>
    </div>
</div>

<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" id="mdlDetail">
    <div class="modal-dialog modal-lg">

        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">
                    <label>รายการวัสดุ</label>
                </h3>
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
            </div>

            <div class="modal-body">

                <div class="row mb-3">

                    <div class="col-md-8 mb-3">
                        <label class="col-form-label">รายการวัสดุ <span class="text-danger">*</span></label>
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control">
                            <button class="btn btn-primary" type="button"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="col-form-label">หมวดพัสดุ</label>
                        <input class="form-control form-control-sm" readonly value="" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="col-form-label">ราคาต่อหน่วย (ก่อน VAT) <span class="text-danger">*</span></label>
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control form-control-sm">
                            <span class="input-group-text">บาท</span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class=" col-form-label form-check form-check-custom">
                            <input class="form-check-input" type="checkbox" value="1">
                            <label class="form-check-label">
                                คิด VAT
                            </label>
                        </label>
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control form-control-sm">
                            <span class="input-group-text">%</span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="col-form-label">ราคาต่อหน่วย (หลัง VAT) <span class="text-danger">*</span></label>
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control form-control-sm">
                            <span class="input-group-text">บาท</span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="col-form-label">จำนวนที่รับ <span class="text-danger">*</span></label>
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control form-control-sm">
                            <span class="input-group-text">บาท</span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="col-form-label">หน่วย <span class="text-danger">*</span></label>
                        <select select-search>
                            <option value="">ทั้งหมด</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="col-form-label">ราคารวม <span class="text-danger">*</span></label>
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control form-control-sm">
                            <span class="input-group-text">บาท</span>
                        </div>
                    </div>
                </div>

            </div>


            <div class="modal-footer justify-content-start">
                <button type="button" class="btn btn-sm btn-primary"><i class="fa fa-save"></i> บันทึก</button>
                <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal"><i class="fa  fa-ban"></i>  ปิด</button>
            </div>

        </div>

    </div>
</div>

