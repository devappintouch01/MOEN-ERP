@model List<MOEN_ERP.DAL.Models.VAsset>

<div class="table-responsive-xxl table-responsive-xl table-responsive-lg table-responsive-md table-responsive-sm">
    <table id="tblVAsset" class="table table-row-dashed table-hover table-row-gray-300 align-middle gy-5 gs-7">
        <thead class="table-primary">
            <tr class="fw-semibold fs-6 text-gray-80 fw-bold">
                <th class="text-center" width="50"></th>
                <th class="text-center" style="width:5%">#</th>
                <th class="text-center">เลขครุภัณฑ์</th>
                <th class="text-center">เลขสินทรัพย์</th>
                <th class="text-center">รายการ</th>
            </tr>
        </thead>
        <tbody>
            @{
                var no = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        <button type="button" onclick="AddVAssetItem('@item.Code','@item.AssetNumberGfmis','@item.Cost','@item.Id')"
                                class="btn btn-icon btn-sm btn-primary text-gray-800 text-hover-white fw-bold mb-0"
                                data-bs-toggle="tooltip" data-bs-custom-class="tooltip-inverse" title="เพิ่มข้อมูล">
                            <i class="fa fa-plus fs-4"></i>
                        </button>
                    </td>
                    <td class="text-center">@no</td>
                    <td class="text-center">@item.Code</td>
                    <td class="text-center">@item.AssetNumberGfmis</td>
                    <td class="text-center">@item.AssetName</td>
                </tr>
                no++;
            }
        </tbody>
    </table>
</div>

<script>
    function AddVAssetItem(code, number, cost, id) {
        $('#asCode').val(code)
        $('#asAssetId').val(id)
        $('#asAssetNumberGfmis').val(number)
        $('#asAmount').val('1')
        $('#asCost').val(cost)
        $('#btnCloseMdlSearchAsset').click();
    }


    $('#tblVAsset').DataTable({
        language: {
            url: `${baseURL}/js/th.json`,
        },
        "paging": true,
        "searching": false,
        "lengthChange": true,
        "lengthMenu": [25, 50, 100],
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
        responsive: {
            details: {
                display: $.fn.dataTable.Responsive.display.childRowImmediate,
                type: 'none',
                target: ''
            }
        },
        "pageLength": 25,
        deferLoading: 10,
        dom: '<"float-left"f>rt<"row"<"col-sm-4"i><"col-sm-4 text-center"l><"col-sm-4"p>>'
    });
</script>