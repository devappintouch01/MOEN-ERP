@section Title {
    <span class="fs-1 fw-semibold">ประวัติการรับพัสดุ</span>

}
@section Breadcrumb {
    <li class="breadcrumb-item pe-3"><a href="#" class="pe-3">หน้าแรก</a></li>
    <li class="breadcrumb-item pe-3 text-muted">ประวัติการรับพัสดุ</li>
}

<div class="card">

    <div class="card-header align-items-center py-5 gap-2 gap-md-5">
        <div class="card-title">
            <div class="d-flex align-items-center position-relative my-1">
                <h2>ค้นหา&nbsp;&nbsp;</h2>
                <input id="btnFilter" onclick="showHideFilter()" type="button" style="border:unset; font-size:x-small;" value="แสดง"></input><button style="border:unset; font-size:x-small;" onclick=" showHideFilter()"> <i class="fas fa-angle-down"></i></button>
            </div>
        </div>
    </div>

    <div class="card-body" id="divFilter" style="display: none;">
        @using (Html.AjaxBeginForm("AssetParcelReceiveHistory", "Asset", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "tbl" }, new { enctype = "multipart/form-data", id = "searchForm" }))
          {
              <div class="row mb-3">
                <div class="row col-md-6 mb-3">
                    <div class="col-4 text-end">
                        <label class="col-form-label">เลขที่รับ</label>
                    </div>
                    <div class="col-8 text-end">
                        <input class="form-control form-control-sm" name="code" />
                    </div> 
                </div>

                <div class="row col-md-6  mb-3">
                    <div class="col-4 text-end">
                        <label class="col-form-label">วันที่รับ</label>
                    </div>
                    <div class="col-8">
                        <div class="position-relative">
                            <input type="text" class="form-control form-control-sm datepickerinput" name="receiveDate" id="receiveDate" placeholder="วว/ดด/ปปปป" />
                            <div class="position-absolute translate-middle-y top-50 end-0 me-3">
                                <i class="fas fa-calendar fs-1hx"><span class="path1"></span><span class="path2"></span></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row col-md-6  mb-3">
                    <div class="col-4 text-end">
                        <label class="col-form-label">ชื่อผู้ขาย/ผู้รับจ้าง/ผู้จำหน่าย</label>
                    </div>
                    <div class="col-8">
                        <input class="form-control form-control-sm" name="supplierName" />

                    </div>
                </div>
            </div>


        <div class="card-footer text-center">
            <button id="btnSearch" type="submit" class="btn btn-primary btn-sm"><i class="fa fa-search"></i> ค้นหา</button>
            <button id="btnResetSearch" type="reset" class="btn btn-secondary btn-sm"><i class="fa fa-refresh"></i> ล้างเงื่อนไข</button>
        </div>
        }
    </div>
</div>

<div id="tbl"></div>


@section Scripts {
    <script>
        SetInputDate('receiveDate');

        $("#btnSearch").click();
        $('#btnResetSearch').click(function () {
            setTimeout(
                function () {
                    $('#searchForm').submit();
                }, 500);
        });
        function showHideFilter() {
            var x = document.getElementById("divFilter");
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }

            var elem = document.getElementById("btnFilter");
            if (elem.value == "ซ่อน") elem.value = "แสดง";
            else elem.value = "ซ่อน";
        }
    </script>
 
}