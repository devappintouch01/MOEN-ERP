@model MOEN_ERP.DAL.Models.MasterUnit

@using (Html.AjaxBeginForm("SaveMasterUnit", "Master", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "tbl" }, new { enctype = "multipart/form-data", @class = "needs-validation", @novalidate = "novalidate" }))
{
    <div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" id="mdlMasterUnit">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">
                        <label>หน่วยนับ สำหรับวัสดุและครุภัณฑ์</label>
                    </h3>
                    <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                        <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                    </div>
                </div>
                <div class="modal-body">
                    @Html.HiddenFor(x => x.Id)

                    <div class="row mb-5">
                        <div class="col-md-6 mb-3">
                            <label class="col-form-label">ชื่อหน่วยนับ:  <span class="text-danger">*</span></label>
                            <input class="form-control form-control-sm" asp-for="NameThai" name="NameThai" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="col-form-label">&nbsp;</label>
                            <div class="form-check mt-3 ms-3">
                                <input class="form-check-input" type="checkbox"
                                       checked=@(Model.Active ?? true ) value="true" name="Active" id="Active">
                                <label class="form-check-label ms-2" for="Active">
                                    ใช้งาน
                                </label>
                            </div>
                        </div>
                    </div>


                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-save"></i> บันทึก</button>
                    <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal"><i class="fa  fa-ban"></i>  ปิด</button>
                </div>
            </div>
        </div>
    </div>


}


<script>

    $('#mdlMasterUnit').modal('show');

    (function () {
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                        hideWait();
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })();
</script>