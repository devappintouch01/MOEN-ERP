@model MOEN_ERP.DAL.Models.MasterMaterial

@using (Html.AjaxBeginForm("SaveMasterMaterial", "Master", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "tbl" }, new { enctype = "multipart/form-data", @class = "needs-validation", @novalidate = "novalidate" }))
{
    <div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" id="mdlMasterMaterial">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">
                        <label>วัสดุ</label>
                    </h3>
                    <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                        <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                    </div>
                </div>
                <div class="modal-body">
                    @Html.HiddenFor(x => x.Id)

                    <div class="row mb-5">
                        <div class="col-md-6 mb-3">
                            <label class="col-form-label">รหัสวัสดุ: </label>
                            <input class="form-control form-control-sm" asp-for="Code" name="Code" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="col-form-label">&nbsp;</label>
                            <div class="form-check mt-3 ms-3">
                                <input class="form-check-input" type="checkbox"
                                       checked=@(Model.Active ?? true ) value="true" name="Active" id="Active">
                                <label class="form-check-label ms-2" for="Active">
                                    ใช้งาน
                                </label>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="col-form-label">ชื่อวัสดุ: <span class="text-danger">*</span></label>
                            <input class="form-control form-control-sm" asp-for="NameThai" name="NameThai" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="col-form-label">หมวดพัสดุ: <span class="text-danger">*</span></label>
                            <select class="form-select form-select-sm" asp-for="MaterialGroupId" name="MaterialGroupId" asp-items="ViewBag.MasterMaterialGroup" required>
                                <option value="">กรุณาเลือก</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="col-form-label">หน่วยนับ: <span class="text-danger">*</span></label>
                            <select class="form-select form-select-sm" asp-for="UnitId" name="UnitId" asp-items="ViewBag.MasterUnit" required>
                                <option value="">กรุณาเลือก</option>
                            </select>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-save"></i> บันทึก</button>
                    <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal"><i class="fa  fa-ban"></i>  ปิด</button>
                </div>
            </div>
        </div>
    </div>

}


<script>

    $('#mdlMasterMaterial').modal('show');

    (function () {
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                        hideWait();
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })();
</script>