@model MOEN_ERP.DAL.Models.MasterBudgetExpenseType

@using (Html.AjaxBeginForm("SaveMasterBudgetExpenseType", "Master", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "tbl" }, new { enctype = "multipart/form-data", @class = "needs-validation", @novalidate = "novalidate" }))
{
    <div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" id="mdlMasterBudgetExpenseType">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">
                        <label>รายการค่าใช้จ่าย</label>
                    </h3>
                    <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                        <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                    </div>
                </div>
                <div class="modal-body">
                    @Html.HiddenFor(x => x.Id)
                    @Html.HiddenFor(x => x.ParentId)
                    <div class="row mb-3">
                        <div class="col-md-12 mb-3">
                            <label class="col-form-label">&nbsp;</label>
                            <div class="form-check mt-3 ms-3">
                                <input class="form-check-input" type="checkbox"
                                       checked=@(Model.Active ?? true ) value="true" name="Active" id="Active">
                                <label class="form-check-label ms-2" for="Active">
                                    ใช้งาน
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="col-form-label">ยุทธศาสตร์: <span class="text-danger">*</span></label>
                            <select class="form-select form-select-sm" asp-for="StrategyCodeId" name="StrategyCodeId" asp-items="ViewBag.MasterStrategyCode" required>
                                <option value="">กรุณาเลือก</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="col-form-label">แผนงาน: <span class="text-danger">*</span></label>
                            <select class="form-select form-select-sm" asp-for="StrategicPlanCodeId" name="StrategicPlanCodeId" asp-items="ViewBag.MasterStrategicPlanCode" required>
                                <option value="">กรุณาเลือก</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="col-form-label">ผลผลิต/โครงการ: <span class="text-danger">*</span></label>
                            <select class="form-select form-select-sm" asp-for="OutputCodeId" name="OutputCodeId" asp-items="ViewBag.MasterOutputCode" required>
                                <option value="">กรุณาเลือก</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="col-form-label">งบรายจ่าย: <span class="text-danger">*</span></label>
                            <select class="form-select form-select-sm" asp-for="ExpenseTypeId" name="ExpenseTypeId" asp-items="ViewBag.MasterExpenseType" required>
                                <option value="">กรุณาเลือก</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="col-form-label">แหล่งเงิน: </label>
                            <select class="form-select form-select-sm" asp-for="MoneySourceId" name="MoneySourceId" asp-items="ViewBag.MasterMoneySource">
                                <option value="">กรุณาเลือก</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="col-form-label">แบบฟอร์ม: <span class="text-danger">*</span></label>
                            <select class="form-select form-select-sm" asp-for="BudgetFormTypeId" name="BudgetFormTypeId" asp-items="ViewBag.MasterBudgetFormType" required>
                                <option value="">กรุณาเลือก</option>
                            </select>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label class="col-form-label">Parent</label>
                            <input class="form-control form-control-sm" value="@(ViewBag.ParentName ?? String.Empty)" readonly />
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="col-form-label">ชื่อรายการ: <span class="text-danger">*</span></label>
                            <input class="form-control form-control-sm" asp-for="Name" name="Name" />
                        </div>                      
                    </div>
                </div>

                <div class="modal-footer justify-content-start">
                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-save"></i> บันทึก</button>
                    <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal"><i class="fa  fa-ban"></i>  ปิด</button>
                </div>
            </div>
        </div>
    </div>
}


<script>

    $('#mdlMasterBudgetExpenseType').modal('show');

    (function () {
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                        hideWait();
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })();
</script>