@section Title {
    <span class="fs-1 fw-semibold">จัดการข้อมูลผู้ใช้งานระบบ</span>

}
@section Breadcrumb {
    <li class="breadcrumb-item pe-3"><a href="#" class="pe-3">หน้าแรก</a></li>
    <li class="breadcrumb-item pe-3 text-muted">จัดการข้อมูลผู้ใช้งานระบบ</li>
}

<div class="card">

    <div class="card-header align-items-center py-5 gap-2 gap-md-5">
        <div class="card-title">
            <div class="d-flex align-items-center position-relative my-1">
                <h2>ค้นหา</h2>
            </div>
        </div>
        <div class="card-toolbar flex-row-fluid justify-content-end gap-5">
            <a class="btn btn-success btn-sm"
               data-ajax="true"
               data-ajax-method="POST"
               data-ajax-mode="replace"
               data-ajax-update="#mdlDetail"
               href='@Url.Action("UserDetail", "System")'>
                <i class="fa fa-plus"></i> เพิ่มผู้ใช้งาน
            </a>
        </div>
    </div>

    <div class="card-body">
        @using (Html.AjaxBeginForm("UserManage", "System", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "tbl" }, new { enctype = "multipart/form-data", id = "searchForm" }))
        {
            <div class="row mb-3">

                <div class="row col-md-6 mb-3">
                    <div class="col-4 text-end">
                        <label class="col-form-label">ชื่อเข้าระบบ</label>
                    </div>
                    <div class="col-8 text-end">
                        <input class="form-control form-control-sm" name="Username" />
                    </div>
                </div>

                <div class="row col-md-6 mb-3">
                    <div class="col-4 text-end">
                        <label class="col-form-label">ชื่อ/นามสกุล</label>
                    </div>
                    <div class="col-8">
                        <input class="form-control form-control-sm" name="FirstName" />
                    </div>
                </div>

                <div class="row col-md-6 mb-3 align-items-center">
                    <div class="col-4 text-end">
                        <label class="col-form-label">รูปแบบการเข้าระบบ</label>
                    </div>
                    <div class="col-8">
                        <div class="row fv-row">
                            <div class="d-xxl-flex d-xl-flex d-lg-flex d-md-flex d-sm-flex">
                                <div class="form-check  form-check-custom form-check-solid me-xxl-10 me-xl-10 me-lg-10 me-md-10 me-sm-10">
                                    <input class="form-check-input" type="radio" value="" name="LoginType" checked>
                                    <label class="form-check-label">
                                        ทั้งหมด
                                    </label>
                                </div>
                                <div class="form-check form-check-custom form-check-solid me-xxl-10 me-xl-10 me-lg-10 me-md-10 me-sm-10">
                                    <input class="form-check-input" type="radio" value="S" name="LoginType">
                                    <label class="form-check-label">
                                        ERP System
                                    </label>
                                </div>
                                <div class="form-check form-check-custom form-check-solid me-xxl-10 me-xl-10 me-lg-10 me-md-10 me-sm-10">
                                    <input class="form-check-input" type="radio" value="A" name="LoginType">
                                    <label class="form-check-label">
                                        Active Directory
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row col-md-6 mb-3 align-items-center">
                    <div class="col-4 text-end">
                        <label class="col-form-label">สถานะ</label>
                    </div>
                    <div class="col-8">
                        <div class="row fv-row">
                            <div class="d-xxl-flex d-xl-flex d-lg-flex d-md-flex d-sm-flex">
                                <div class="form-check  form-check-custom form-check-solid me-xxl-10 me-xl-10 me-lg-10 me-md-10 me-sm-10">
                                    <input class="form-check-input" type="radio" value="" name="Active" checked>
                                    <label class="form-check-label">
                                        ทั้งหมด
                                    </label>
                                </div>
                                <div class="form-check form-check-custom form-check-solid me-xxl-10 me-xl-10 me-lg-10 me-md-10 me-sm-10">
                                    <input class="form-check-input" type="radio" value="true" name="Active">
                                    <label class="form-check-label">
                                        ใช้งาน
                                    </label>
                                </div>
                                <div class="form-check form-check-custom form-check-solid me-xxl-10 me-xl-10 me-lg-10 me-md-10 me-sm-10">
                                    <input class="form-check-input" type="radio" value="false" name="Active">
                                    <label class="form-check-label">
                                        ไม่ใช้งาน
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="card-footer text-center">
                <button type="submit" id="btnSearch" class="btn btn-primary btn-sm"><i class="fa fa-search"></i> ค้นหา</button>
                <button id="btnResetSearch" type="reset" class="btn btn-secondary btn-sm"><i class="fa fa-refresh"></i> ล้างเงื่อนไข</button>
            </div>
        }
    </div>
</div>

<div id="tbl"></div>
<div id="mdlDetail"></div>
<div id="mdlDetailRole"></div>


@section Scripts {
    <script>
        $("#btnSearch").click();
        $('#btnResetSearch').click(function () {
            setTimeout(
                function () {
                    $('#searchForm').submit();
                }, 500);
        });
    </script>
}