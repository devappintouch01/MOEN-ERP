@section Title {
    <span class="fs-1 fw-semibold">รายการจัดสรรงบประมาณแผ่นดิน</span>

}
@section Breadcrumb {
    <li class="breadcrumb-item pe-3"><a href="#" class="pe-3">หน้าแรก</a></li>
    <li class="breadcrumb-item pe-3 text-muted">รายการจัดสรรงบประมาณแผ่นดิน</li>
}

<div class="card">

    <div class="card-header align-items-center py-5 gap-2 gap-md-5">
        <div class="card-title">
            <div class="d-flex align-items-center position-relative my-1">
                <h2>ค้นหา</h2>
            </div>
        </div>      
    </div>


    <div class="card-body">
        @using (Html.AjaxBeginForm("BudgetAllocateList", "Budget", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "tbl" }, new { enctype = "multipart/form-data", id = "searchForm" }))
        {

            <div class="row mb-3">
                <div class="row col-md-6 mb-3">
                    <div class="col-4 text-end">
                        <label class="col-form-label">ปีงบประมาณ</label>
                    </div>
                    <div class="col-8 text-end">
                        <input class="form-control form-control-sm" name="" />
                    </div>
                </div>
                <div class="row col-md-6 mb-3">
                    <div class="col-4 text-end">
                        <label class="col-form-label">หน่วยงาน</label>
                    </div>
                    <div class="col-8 text-end">
                        <select class="form-select form-select-sm" name="">
                            <option value="">ทั้งหมด</option>
                        </select>
                    </div>
                </div>

                <div class="row col-md-6 mb-3">
                    <div class="col-4 text-end">
                        <label class="col-form-label">ประเภทงบประมาณ</label>
                    </div>
                    <div class="col-8 text-end">
                        <select class="form-select form-select-sm" name="">
                            <option value="">ทั้งหมด</option>
                        </select>
                    </div>
                </div>
                <div class="row col-md-6 mb-3">                    
                </div>

            </div>

            <div class="card-footer text-center">
                <button type="submit" id="btnSearch" class="btn btn-primary btn-sm"><i class="fa fa-search"></i> ค้นหา</button>
                <button id="btnResetSearch" type="reset" class="btn btn-secondary btn-sm"><i class="fa fa-refresh"></i> ล้างเงื่อนไข</button>
            </div>
        }
    </div>
</div>

@* <div id="tbl"></div> *@
<div id="mdlDetail"></div>

<div id="divResults"></div>

<div class="card mt-10">
    <div class="card-body">
        <div class="table-responsive-xxl table-responsive-xl table-responsive-lg table-responsive-md table-responsive-sm">
            <table id="table1" class="table table-row-dashed table-hover table-row-gray-300 align-middle gy-5 gs-7 js-table">
                <thead class="table-primary">
                    <tr class="fw-semibold fs-6 text-gray-80 fw-bold">
                        <th class="text-center"></th>
                        <th class="text-center" style="width:5%">#</th>
                        <th class="text-center">ปีงบประมาณ</th>
                        <th class="text-center">หน่วยงาน</th>
                        <th class="text-center">ประเภทงบประมาณ</th>
                        <th class="text-center">งบประมาณ</th>                       
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-center">
                            <a href="@Url.Action("BudgetAllocateDetail","Budget")" class="btn btn-icon btn-sm btn-light-warning text-gray-800 text-hover-white fw-bold mb-0"
                               data-bs-toggle="tooltip" data-bs-custom-class="tooltip-inverse" title="แก้ไขรายละเอียด">
                                <i class="fa fa-edit fs-4"></i>
                            </a>                            
                        </td>
                        <td class="text-center">1</td>
                        <td class="text-center">2567</td>
                        <td class="text-center">-</td>
                        <td class="text-center">งบประมาณแผ่นดิน</td>
                        <td class="text-center">200,000,000</td>                      
                    </tr>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>       

        $("#btnSearch").click();
        $('#btnResetSearch').click(function () {
            setTimeout(
                function () {
                    $('#searchForm').submit();
                }, 500);
        });
    </script>
}