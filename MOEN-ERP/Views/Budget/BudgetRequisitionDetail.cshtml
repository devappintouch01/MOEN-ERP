@section Breadcrumb {
    <li class="breadcrumb-item pe-3"><a href="#" class="pe-3">หน้าแรก</a></li>
    <li class="breadcrumb-item pe-3 text-muted">เบิกจ่ายงบประมาณแผ่นดิน</li>
}

<div class="card">
    <div class="card-body">

      

        <div class="row col-xl-12 col-lg-12 col-md-12 mb-3">
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                <label class="col-form-label required">วันที่</label>
                <div class="position-relative">
                    <input type="text" class="form-control form-control-sm datepickerinput" placeholder="วว/ดด/ปปปป" name="Date1" id="Date1" />
                    <div class="position-absolute translate-middle-y top-50 end-0 me-3">
                        <i class="fas fa-calendar fs-1hx"><span class="path1"></span><span class="path2"></span></i>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                <label class="col-form-label">เลขที่คำขอ</label>
                <input type="text" class="form-control form-control-sm" disabled />
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                <label class="col-form-label">สถานะ</label>
                <input type="text" class="form-control form-control-sm" disabled />
            </div>
        </div>


        <div class="row col-xl-12 col-lg-12 col-md-12 mb-3">
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                <label class="col-form-label required">หน่วยงาน</label>
                <select class="form-select form-select-sm">
                    <option value=""></option>
                </select>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                <label class="col-form-label required">ศูนย์ต้นทุน</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                <label class="col-form-label required">ปีงบประมาณ</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
        </div>

        <div class="row col-xl-12 col-lg-12 col-md-12 mb-3">
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                <label class="col-form-label required">งบรายจ่าย</label>
                <select class="form-select form-select-sm">
                    <option value=""></option>
                </select>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                <label class="col-form-label required">แหล่งเงิน</label>
                <select class="form-select form-select-sm">
                    <option value=""></option>
                </select>
            </div>           
        </div>

        <div class="row col-xl-12 col-lg-12 col-md-12 mb-3">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                <label class="col-form-label required">รายละเอียด</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
        </div>

        <div class="row col-xl-12 col-lg-12 col-md-12 mb-3">
            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12">
                <label class="col-form-label">รายการงบประมาณ</label>
                <select class="form-select form-select-sm">
                    <option value=""></option>
                </select>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 pt-14">
                <div class="row fv-row mb-3 mt-2">
                    <div class="d-xxl-flex d-xl-flex d-lg-flex d-md-flex d-sm-flex">
                        <div class="form-check  form-check-custom form-check-solid me-xxl-10 me-xl-10 me-lg-10 me-md-10 me-sm-10 mb-2">
                            <input class="form-check-input" type="checkbox" value="1">
                            <label class="form-check-label">
                                ก่อหนี้ (PO)
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row col-xl-12 col-lg-12 col-md-12 mb-3">
            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12">
          
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 pt-14">
                <button type="button" class="btn btn-success btn-sm"><i class="fa fa-plus"></i> เพิ่มรายการ</button>
                <button type="button" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> ลบรายการ</button>
            </div>
        </div>

        <div class="row mb-3">
            <div class="table-responsive-xxl table-responsive-xl table-responsive-lg table-responsive-md table-responsive-sm">
                <table id="table1" class="table table-row-dashed table-hover table-row-gray-300 align-middle gy-5 gs-7">
                    <thead class="table-primary">
                        <tr class="fw-semibold fs-6 text-gray-80 fw-bold">
                            <th class="text-center" style="width:5%">
                             
                                    <input class="form-check-input" type="checkbox" >
                                 
                            </th>
                            <th class="text-center" style="width:5%">ลำดับ</th>
                            <th class="text-center">รายการงบประมาณ</th>
                            <th class="text-center" style="width:20%">เลขที่ฎีกา</th>
                            <th class="text-center" style="width:20%">อนุมัติฎีกา</th>
                            <th class="text-center" style="width:20%">ผูกพัน</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center">  
                                <input class="form-check-input" type="checkbox">
                                </td>
                            <td class="text-center">1</td>
                            <td class="text-center">
                               ค่าจ้างเหมาบริการ
                            </td>
                            <td class="text-center">
                                <input type="text" class="form-control form-control-sm text-center" value="" />
                            </td>
                            <td class="text-center">
                                <input type="text" class="form-control form-control-sm text-center" value="55,000" />
                            </td>
                            <td class="text-center">
                                <input type="text" class="form-control form-control-sm text-center" value="" />
                            </td>
                        </tr>
                       
                    </tbody>
                </table>
            </div>
        </div>
      
       

    </div>
    <div class="card-footer">
        <button type="button" class="btn btn-primary btn-sm"><i class="fa fa-save"></i> บันทึก</button>
        <a href="@Url.Action("BudgetRequisitionList","Budget")" class="btn btn-secondary btn-sm"><i class="fa fa-repeat"></i> กลับหน้าหลัก</a>
        <button type="button" class="btn btn-info btn-sm"><i class="fa fa-print"></i> พิมพ์</button>
    </div>
</div>


@section Scripts {
    <script>
        $('#table1').DataTable({
            language: {
                url: `${baseURL}/js/th.json`,
            },
            "paging": true,
            "searching": false,
            "lengthChange": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "columnDefs": [
                { "orderable": false, "targets": 0 }
            ],

            "responsive": true,
            responsive: {
                details: {
                    display: $.fn.dataTable.Responsive.display.childRowImmediate,
                    type: 'none',
                    target: ''
                }
            },
            "pageLength": 10,
            deferLoading: 10,
            dom: '<"float-left"f>rt<"row"<"col-sm-4"i><"col-sm-4 text-center"l><"col-sm-4"p>>'
        });
    </script>
}